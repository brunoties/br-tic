<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
	
	
	<!-- Tratando a excecao ViewExceptionHandler -->
	<factory>
		<exception-handler-factory>
			com.BrTicOs.util.jsf.JsfExceptionHandlerFactory
		</exception-handler-factory>
	</factory>

	<application>
		<!-- Definindo a localizacao padrao da aplicacao e seu idioma -->
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
		
		<!-- Arquivo de personalizacao das mensagens do Bean Validation -->
		<message-bundle>com.brtic.Messages</message-bundle>
		
	</application>

</faces-config>
